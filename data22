iteration = 1
    while f"iteration{iteration}status" in df.columns:
        iteration += 1
    status_col = f"iteration{iteration}status"
    values_col = f"iteration{iteration}values"
    
    df[status_col] = None
    df[values_col] = None

else:
            new_row = {
                "type": data["type"], 
